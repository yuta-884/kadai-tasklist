<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 350 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-8 mt-sm-n3">
    <ul class="nav nav-tabs nav-justified py-2 mb-3">
      <li class="nav-item">Tasks <span class="badge badge-primary"><%= @count_tasks %></span></li>
    </ul>
    <%= render "tasks/tasks", tasks: @tasks %>
  </div>
</div>