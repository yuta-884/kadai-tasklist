<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, {size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p class="mb-1">タスク: <%= task.content %></p>
        </div>
        <div>
          <p class="mb-1">状　況: <%= task.status %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "編集する", edit_task_path(task), class: "btn btn-primary btn-sm" %>
            <%= link_to "削除する", task, method: :delete, data: { confirm: "タスクを削除しますか？" }, class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>